{
  "name": "apigateway",
  "version": "1.0.0",
  "description": "api gateway for service",
  "main": "server.js",
  "scripts": {
    "start": "npm-run-all --parallel service1 service2 service3 api_gateway",
    "dev": "npm-run-all --parallel service1-dev service2-dev service3-dev api_gateway-dev",
    "service1": "node ../UserService/app.js",
    "service2": "node ../SubjectService/app.js",
    "service3": "node ../LeaveService/app.js",
    "api_gateway": "node server.js",
    "service1-dev": "nodemon ../UserService/app.js",
    "service2-dev": "nodemon ../SubjectService/app.js",
    "service3-dev": "nodemon ../LeaveService/app.js",
    "api_gateway-dev": "nodemon server.js",
    "test": "jest"
  },
  "author": "zKCNT.",
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.4",
    "express-http-proxy": "^1.5.1",
    "nodemon": "^1.18.11",
    "npm-run-all": "^4.1.5",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "xml": "^1.0.1"
  },
  "devDependencies": {
    "jest": "^24.7.1",
    "jest-cli": "^24.7.1",
    "supertest": "^4.0.2"
  }
}
